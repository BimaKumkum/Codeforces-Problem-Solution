
#include <bits/stdc++.h>
using namespace std;
typedef long long int ll;
int main(){
int t,x;
cin>>t;
while(t--){
  ll i=1,s=0,n=0;
    cin>>x;
while(s < x){
    s = s+i;
    i++;
    n++;
}
if(s == x){
    cout<<n<<endl;
}
else{
    int d = s - x;
    if(d == 1){
        cout<<n+1<<endl;
    }
    else{
        cout<<n<<endl;
    }
}

}

return 0;
}


